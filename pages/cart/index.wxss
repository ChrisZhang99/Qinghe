.container {
  display: flex;
  width: 100%;
  height: 100%;
  
  background-color: #F2f2f2;
  color: #939393;
  margin-bottom: 50px;
}
.container .cart-image {
  width: 120px;
  height: 120px;
}
.cart_items{
  float: top;
  width: 100%;
  height: 30px;
  text-align: left;
  border-bottom: 1px solid lightgray;
}

.cart_items .item_inside_line{
  float: left;
  width: 30%;
  font-size: 15px;
  color: black;
  margin-right: 5px;
  margin-top: 3px;
  text-align: center;
}

.cart_items .item_inside_line_name{
  float: left;
  width: 40%;
  font-size: 15px;
  color: black;
  margin-right: 5px;
  margin-top: 3px;
  text-align: right;
}

.cart_items .item_inside_line_unit{
  float: left;
  width: 10%;
  font-size: 15px;
  color: black;
  margin-right: 5px;
  margin-top: 3px;
  text-align: right;
}

.place_order{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  
  align-content: right;
  background-color: #F2f2f2;
}
.place_order_button{
  width: 20%;
  height: 40px;
  border: 1px solid red;
  font-size: 15px;
  text-align: center;
  margin-bottom: 10px;
  align-self: right;
}
